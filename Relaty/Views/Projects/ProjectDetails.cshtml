@model Relaty.ViewModels.ProjectStatusesModel
@{
    ViewData["Title"] = "ProjectDetails";
}

<br />

<div class="form-group col-3">
    <h2>@Model.Project.Name</h2>
</div>
<div class="form-group col-3">
    <h5>Date of start: @Model.Project.DateOfStart.ToString().Split("0:")[0]</h5>
</div>
<div class="form-group col-3">
    <h5>Status: @Model.Project.Status.Name</h5>
</div>
<div class="form-group col-4 ">
    <h5>Employees:</h5>
    @foreach (var projectEmployee in Model.Project.ProjectsEmployees)
    {
        <span class="btn btn-primary">@projectEmployee.Employee.Name</span>
    }
</div>

